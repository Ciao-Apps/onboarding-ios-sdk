{
  "flowID": "ecommerce_onboarding_v1",
  "appID": "shop_easy_app",
  "version": "1.0",
  "pages": [
    {
      "id": "welcome",
      "type": "text_image",
      "title": "Welcome to ShopEasy",
      "subtitle": "Discover amazing products at great prices",
      "imageURL": "https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=400&h=300&fit=crop",
      "style": {
        "titleColor": "#1D1D1F",
        "subtitleColor": "#6E6E73"
      }
    },
    {
      "id": "interests",
      "type": "selector",
      "title": "What interests you most?",
      "subtitle": "We'll show you relevant products",
      "key": "interests",
      "options": ["Electronics", "Fashion", "Home & Garden", "Sports", "Books"]
    },
    {
      "id": "budget",
      "type": "slider",
      "title": "What's your typical budget range?",
      "subtitle": "This helps us show relevant products",
      "key": "budget_range",
      "min": 0,
      "max": 1000,
      "step": 50
    },
    {
      "id": "email",
      "type": "input",
      "title": "Stay updated with deals",
      "subtitle": "Get notified about sales and new arrivals",
      "placeholder": "your@email.com",
      "inputType": "email",
      "key": "email"
    },
    {
      "id": "ready",
      "type": "text_image",
      "title": "Ready to shop?",
      "subtitle": "Find products tailored just for you",
      "imageURL": "https://images.unsplash.com/photo-1472851294608-062f824d29cc?w=400&h=300&fit=crop",
      "button": {
        "title": "Start Shopping",
        "action": "finish",
        "style": {
          "backgroundColor": "#FF6B35",
          "textColor": "#FFFFFF",
          "cornerRadius": 25
        }
      }
    }
  ]
}
